<h1 class="display-6 text-dark mb-5 mt-5 text-center fs-1">Makyaj Fırçaları</h1>

<div class="row g-4 mb-5">

@foreach(brush b in ViewBag.Brush)
{



        <div class="col-md-2">
            <div class="card h-100 ">
                <img src="~/image/@b.ImgUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@b.Name</h5>
                    <a href="/BrushAndAccessories/details/@b.Id" class="btn btn-light border-black text-color:white margin-top:auto;">DETAY</a>

                </div>
            </div>
        </div>



}
</div>