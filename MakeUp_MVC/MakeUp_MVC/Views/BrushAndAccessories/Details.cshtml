
@{
    brush brs =ViewBag.Brush;
}
<div class="content container my-4">
    <!-- Sol kart -->
    <div class="card" style="width: 48%; height:100%; margin-right: 2%;">
        <img src="~/image/@brs.ImgUrl" class="card-img-top" alt="Card image cap">
    </div>

    <div class="card" style="width:48%; height:100%; margin-right: 2%;">
        <div class="card-body">
            <h5 class="card-title">@brs.Name</h5>
            <p class="card-text">@Html.Raw(brs.Description)</p>
        </div>
    </div>
</div>