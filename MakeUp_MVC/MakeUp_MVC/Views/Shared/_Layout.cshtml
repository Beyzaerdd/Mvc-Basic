<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Make up</title>
    <link rel="stylesheet" href="~/css/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <div id="container" class="container-fluid p-0 justify-content-around">
        <header>
            <nav class="navbar navbar-expand-lg bg-dark text-white" data-bs-theme="dark">
                <div class="container-fluid">

                    <a class="navbar-brand text-white" href="/">Make Up</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 navbar-nav w-100 d-flex justify-content-around">

                            <li class="nav-item ">
                                <a class="nav-link active text-white border border-white rounded p-3  text-dark;" aria-current="page" href="/">ANASAYFA</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link  text-white border border-white rounded p-3  text-dark;" href="/face">YÜZ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white border border-white rounded p-3  text-dark;" href="/eyes">GÖZ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link  text-white border border-white rounded p-3  text-dark;" href="/Lips">DUDAK</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link  text-white border border-white rounded p-3  text-dark;" href="/BrushAndAccessories">FIRÇALAR</a>
                            </li>


                        </ul>
                       
                    </div>
                </div>
            </nav>
        </header>
        <div class="container d-flex flex-column">
            <main role="main" class="">

                @RenderBody()
            </main>
        </div>
        <footer class="bg-dark text-white text-center mt-auto">
            <!-- Footer içeriği -->
            &copy; 2024 My Website
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
