
@{

    Lips lips = ViewBag.lips;
}
<div class="content container my-4">
    <!-- Sol kart -->
    <div class="card" style="width: 48%; height:100%; margin-right: 2%;">
        <img src="~/image/@lips.ImageUrl" class="card-img-top" alt="Card image cap">
    </div>

    <div class="card" style="width:48%; height:100%; margin-right: 2%;">
        <div class="card-body">
            <h5 class="card-title">@lips.Name</h5>
            <p class="card-text">@Html.Raw(lips.Description)</p>
        </div>
    </div>
</div>